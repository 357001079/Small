.foote{
    width: 100%;
    height: 88rpx;
}
.footer{
    width: 100%;
    height: 85rpx;
    background: white;
    border-top: 1rpx solid #ccc;
    position: fixed;
    bottom: 0;
    left: 0;
    display: flex;
    justify-content: space-around;
    align-items: center;
}
.footer>.ipt{
    width: 400rpx;
    height: 50rpx;
    border: 1px solid black;
    border-radius: 30rpx;
    padding-left: 20rpx;
    font-size: 20rpx;
}
.footer image{
    width: 30rpx;
    height: 30rpx;
}
.footer>view>text{
    font-size: 17rpx;
    margin-top: -100rpx;
}