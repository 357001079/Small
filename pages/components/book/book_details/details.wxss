/* pages/components/book/book_details/details.wxss */
.box {
    width: 100%;
}
.logo {
    width: 100%;
    height: 100rpx;
    border-top: 1px solid #f3f3f3;
    display: flex;
    align-items: center;
    box-sizing: border-box;
    justify-content: center;
    box-shadow: 0 1rpx 5rpx #f6f6f6;
    z-index: 5;
} 
.logo>view {
    width: 690rpx;
    height: 70rpx;
    background: #f7f7f7;
    border-radius: 50rpx;
} 
.logo>view>input {
    width: 100%;
    height: 100%;
    box-sizing: border-box;
    font-size: 31rpx;
    text-align: center;
    padding: 20rpx;
    position: relative;
}
.logo>view>icon {
    width:30rpx;
    height: 30rpx;
    position: absolute;
    left: 230rpx;
    top: 35rpx;
}
.grey{
    width: 100%;
    height: 20rpx;
    background: #f5f5f5;
}
.book{
    width: 100%;
    height: 480rpx;
    /* background: pink; */
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
}
.book image{
    width: 200rpx;
    height: 300rpx;
}
.book>text:nth-of-type(1){
    font-size: 40rpx;
}
.book>text:nth-of-type(2){
    font-size: 30rpx;
    color: #999999;
}
.essay{
    width: 100%;
    /* height: 390rpx; */
    text-align: center;
    margin-top: 10rpx;
    font-size: 28rpx;
}
.center{
    width: 90%;
    flex-wrap: wrap;
    margin: 0 auto;
    display: flex;
}
.center>view{
    padding: 10rpx;
    margin: 10rpx;
    color: #545454;
    background: whitesmoke;
    text-align: center;
    font-size: 26rpx;
    border-radius: 35rpx;
}
.center>view:nth-of-type(1){
    color: #4f4f4f;
    background: #fffadd;
}
.center>view:nth-of-type(2){
    background: #eefaff;
}
.center>view>text{
    font-size: 20rpx;
}
