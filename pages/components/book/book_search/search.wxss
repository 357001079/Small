.search{
    width: 92%;
    height: 140rpx;
    /* background: pink; */
    border-bottom: 1rpx solid #eeeeee;
    margin: 0 auto;
    display: flex;
    align-items: center;
}
.search>cover-image{
    width: 70rpx;
    height: 90rpx;
    margin-left: 20rpx;
}
.search>.text{
    margin-left: 25rpx;
}
.search>.text>view{
    font-size: 33rpx;
}
.search>.text>text{
    font-size: 22rpx;
    color: #c2c2c2;
}
