/* pages/components/book/book.wxss */
.box {
width: 100%;
}
.logo {
width: 100%;
height: 100rpx;
border-top: 1px solid #f3f3f3;
display: flex;
align-items: center;
box-sizing: border-box;
justify-content: center;
box-shadow: 0 1rpx 5rpx #f6f6f6;
z-index: 5;
}

.logo>view {
width: 690rpx;
height: 70rpx;
background: #f7f7f7;
border-radius: 50rpx;
}

.logo>view>input {
width: 100%;
height: 100%;
box-sizing: border-box;
font-size: 31rpx;
text-align: center;
padding: 20rpx;
}
.logo>view>icon {
width:30rpx;
height: 30rpx;
position: absolute;
left: 230rpx;
top: 35rpx;
}

.section {
width: 100%;
background: #f9f9f9;
padding: 40rpx 0;
box-sizing: border-box;
}

.section>view:nth-of-type(1) {
text-align: center;
font-size: 32rpx;
}

.section_list {
width: 100%;
display: flex;
flex-wrap: wrap;
justify-content: space-between;
padding: 30rpx 90rpx 0 90rpx;
box-sizing: border-box;
}

.list {
width: 240rpx;
height: 390rpx;
background: white;
margin-bottom: 60rpx;
border-radius: 10rpx;
box-shadow: 0 0 10rpx gainsboro;
}

.list>view:nth-of-type(1) {
width: 100%;
height: 270rpx;
border-radius: 10rpx 10rpx 0 0;
}

.list>view:nth-of-type(1)>image {
width: 100%;
height: 100%;
}

.list_a {
width: 100%;
height: 140rpx;
display: flex;
flex-direction: column;
font-size: 22rpx;
justify-content: space-between;
padding: 20rpx;
box-sizing: border-box;
margin-top: -10rpx;
}

.list_a>view:nth-of-type(1) {
display: flex;
flex-direction: column;
}

.list_a>view:nth-of-type(1)>text:nth-of-type(1) {
width: 100%;
font-size: 25rpx;
overflow: hidden;
white-space: nowrap;
text-overflow: ellipsis;
}

.list_a>view:nth-of-type(1)>text:nth-of-type(2) {
color: #ccc;
margin-top: 10rpx;
}

.list_a>view:nth-of-type(2) {
color: #ccc;
text-align: right;
}

