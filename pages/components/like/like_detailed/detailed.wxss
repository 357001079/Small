.banner{
  width: 100%;
  height: 100rpx;
  /* background: pink; */
  border-top: 1px  solid #ccc;
  display: flex;
  justify-content: space-between;
}
.banner1{
  height: 100%;
  display: flex;
  align-items: center;
}
.banner1>text:nth-of-type(1){
  font-size: 30rpx;
  margin-top: 20rpx;
  margin-left: 20rpx;
}
.banner1>text:nth-of-type(2){
  font-size: 50rpx;
  font-weight: 600;
}
.banner1>view{
  font-size: 20rpx;
  display: flex;
  flex-direction: column;
}
.banner2{
  height: 100%;
  display: flex;
  align-items: center;
  margin-right: 40rpx;
}
.banner2 cover-image{
  width: 40rpx;
  height: 40rpx;
}
.banner2>text{
  font-size: 18rpx;
  margin-right: 20rpx;
  margin-top: -20rpx;
}
.image{
  width: 100%;
  height: 500rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
}
.image image{
  width: 100%;
  height: 100%;
}
.image1{
  width: 140rpx;
  height: 140rpx;
  background: white;
  border-radius: 50%;
  position: absolute;
}
.image1>cover-image{
  width: 70rpx;
  height: 70rpx;
  position: absolute;
  top: 38rpx;
  left: 40rpx;
}
.life{
  width: 500rpx;
  height: 100rpx;
  /* background: pink; */
  margin: 100rpx auto;
}
.life>text{
  font-size: 30rpx;
  text-align: center;
  width: 60%;
  height: 100%;
}
.switch{
  width: 500rpx;
  height: 100rpx;
  /* background: #f7f7f7; */
  margin: 80rpx auto;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 25rpx;
  position: relative;
}
.switch>cover-image{
  width: 25rpx;
  height: 35rpx;
}
.switch>.img2{
  position: absolute;
  left: 30rpx;
}
.switch>.img1{
  position: absolute;
  left: 30rpx;
}
/* .switch>text{
  text-align: center;
} */
.switch>.img3{
  position: absolute;
  right: 30rpx;
}
.switch>.img4{
  position: absolute;
  right: 30rpx;
}