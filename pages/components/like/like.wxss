/* pages/components/like/like.wxss */
.user{
    width: 100%;
    height: 550rpx;
    position: relative;
}
.name{
    width: 200rpx;
    height: 200rpx;
    position: absolute;
    top: 190rpx;
    left: 280rpx;
    text-align: center;
}
.message{
    width: 100%;
    height: 160rpx;
    display: flex;
    justify-content: space-around;
    margin-top:30rpx;
}
.likelist{
    width: 100%;
    display: flex;
    flex-wrap: wrap;
    justify-content: space-around;
    background: #f5f5f5;
    box-shadow: 0 1rpx 5rpx #f6f6f6;
}

.booklist{
    width: 320rpx;
    height: 450rpx;
    background-color: white;
    margin-top: 20rpx;
}
.top{
    width: 100%;
    /* height: 60rpx; */
    display: flex;
    justify-content: space-between;
}
