/* pages/components/like/like.wxss */

.user {
  width: 100%;
  height: 550rpx;
  position: relative;
}

.name {
  width: 100%;
  height: 200rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  position: absolute;
  top: 240rpx;
}

.message {
  width: 100%;
  height: 160rpx;
  display: flex;
  justify-content: space-around;
  margin-top: 30rpx;
}

.text {
  text-align: center;
  font-size: 30rpx;
  background: #f5f5f5;
  padding-top: 50rpx;
}

.likelist {
  width: 100%;
  background: #f5f5f5;
  display: flex;
  flex-wrap: wrap;
  /* justify-content: center; *//* justify-content: space-around; */
}

.booklist {
  width: 45%;
  height: 470rpx;
  background: white;
  margin-top: 30rpx;
  margin-left: 3.3%;
  margin-bottom: 30rpx;
  box-shadow: 10rpx 10rpx 10rpx #ccc;
}

.top {
  width: 100%;
  height: 80rpx;
  /* background: #ccc; */
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.dian {
  width: 70rpx;
  height: 40rpx;
  background: #f7f7f7;
  font-size: 22rpx;
  text-align: center;
  line-height: 40rpx;
  margin-left: 20rpx;
}

.top>view:nth-of-type(2) {
  font-size: 16rpx;
  color: #c9c9c9;
  margin-right: 20rpx;
  display: flex;
}

.top>view:nth-of-type(2)>image {
  width: 25rpx;
  height: 25rpx;
}

.top>view:nth-of-type(2)>view {
  margin-top: -5rpx;
}

.img {
  width: 100%;
  height: 240rpx;
}

.jieshao {
  font-size: 26rpx;
  color: #999;
  width: 88%;
  margin: 30rpx auto;
}
